/* <输入框 */
.input {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
  margin:0 auto;
  width:90%;
  border-bottom: 1rpx solid #333;
   margin-top:30rpx;
}
/* <输入字体样式 */
input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  line-height: 86rpx;
}
/* <取消按钮 */
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: left;
 margin-left:20rpx;
 font-size:30rpx;

}
/* <确定按钮 */
.btn-confirm {
  width: 50%;
  color: #666;
  text-align: right;
   margin-right:20rpx;
font-size:30rpx;
}